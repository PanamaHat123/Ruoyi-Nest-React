    "@nestjs/typeorm": "^10.0.2",
    "archiver": "^7.0.1",
    "bcrypt": "^5.1.1",
    "chalk": "4.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "config": "^3.3.12",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "exceljs": "^4.4.0",
    "fs-extra": "^11.2.0",
    "ioredis": "^5.4.1",
    "lodash": "^4.17.21",
    "luxon": "^3.5.0",
    "moment": "^2.30.1",
    "mysql2": "^3.11.0",
    "nestjs-i18n": "^10.4.9",
    "passport-jwt": "^4.0.1",
    "path-to-regexp": "^6.2.1",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.0",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "svg-captcha": "^1.4.0",
    "swagger-ui-express": "^5.0.1",
